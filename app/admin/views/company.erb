  <div class="field row" id="field_promo_cards_url">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :promo_cards_url, :caption => "Promo Cards URL" %>
        <%= f.text_field :promo_cards_url, :class => 'form-control' %>
