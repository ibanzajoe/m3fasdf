<div class="dashhead">
  <div class="dashhead-titles">
    <h6 class="dashhead-subtitle">Dashboards</h6>
    <h2 class="dashhead-title">Transactions</h2>
  </div>
  <div class="btn-toolbar dashhead-toolbar">
    <div class="btn-group">
      <a href="/admin/transaction" type="button" class="btn btn-primary-outline">
      Create New <span class="icon icon-plus"></span>
      </a>
    </div>
  </div>
</div>

<hr class="m-t">

<div class="flextable table-actions">
  <div class="flextable-item flextable-primary">
    <div class="btn-toolbar-item input-with-icon">
      <input type="text" class="form-control input-block" placeholder="Search transactions">
      <span class="icon icon-magnifying-glass"></span>
    </div>
  </div>
  <div class="flextable-item">
    <div class="btn-group">
      <!-- <a href="/admin/transaction" type="button" class="btn btn-primary-outline">
      Add <span class="icon icon-plus"></span>
      </a> -->
    </div>
  </div>
</div>
<div class="table-full">
  <div class="table-responsive">
    <table class="table" data-sort="table">
      <thead>
        <tr>
          <th><input type="checkbox" class="select-all" id="selectAll"></th>
          <th class="headerSortUp">ID</th>          
          <th>User</th>
          <th>Type</th>
          <th>Description</th>
          <th>Earned</th>                 
          <th>Date</th>   
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
        <tr>
          <td><input type="checkbox" class="select-row"></td>
          <td><%= transaction[:id] %></td>          
          <td><%= transaction.user[:username] %></td>
          <td><%= transaction[:type] %></td>
          <td>
            <% if transaction[:type] == "activation" %>
              <%= transaction[:num_used] %> activations @ <%= transaction.company[:company] %>
            <% else %>
              <%= transaction[:label] %>
            <% end %>
          </td>
          <td><%= number_to_currency(transaction[:amount]) %></td>
          <td><%= transaction[:created_at].strftime("%m/%d/%y") %></td>
          <td>
            <!-- <a href="/admin/transaction/<%=transaction[:id] %>" class="btn btn-primary-outline btn-sm">Edit <span class="icon icon-pencil"></span></a> -->
            <a href="/admin/transaction/delete/<%=transaction[:id] %>" data-remote="true" data-confirm="Are You Sure?" class="btn btn-primary-outline btn-sm">Delete <span class="icon icon-erase"></span></a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="text-center">

  <%= will_paginate @transactions, renderer: BootstrapPagination::Sinatra, :previous_label => '&laquo;', :next_label => '&raquo;' %>
  
</div>
