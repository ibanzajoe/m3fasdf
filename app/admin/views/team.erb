              <% when "accepted" %>
                <tr>
                  <td><input type="text" disabled class="invite-email form-control" value="<%= slot[:email] %>" placeholder="input their email"></td>
                  <td><a class="btn btn-success" disabled href="#" role="button">Joined</a></td>
