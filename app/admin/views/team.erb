<script>

$(function(){

  $('#invite-list a').click(function (e){
    e.preventDefault();
    var row = $(this).parent().parent();
    var email = row.find('.invite-email').val();
    if(email == ""){
      alert('Email can not be blank');
    }else{
      $.post("/admin/invite", {"email": email}, function(res){
        console.log(res);
        switch(res.status){
          case "ok":
          row.find('a.btn').attr('class', 'btn btn-warning').text('Pending');
          break;

          default:
          alert('User already invited');
          break;
        }
      })  
    }
    
    
  })

});
</script>