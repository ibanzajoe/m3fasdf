<script>

function validateEmail(value) {
  var input = document.createElement('input');

  input.type = 'email';
  input.value = value;

  return typeof input.checkValidity == 'function' ? input.checkValidity() : /\S+@\S+\.\S+/.test(value);
}

$(function(){

  $('#invite-list a').click(function (e){
    e.preventDefault();
    var row = $(this).parent().parent();
    

    var type = $(this).data('type');
    var email = row.find('.invite-email').val();

    switch(type){
      case "invite":

        if(email == ""){
          alert('Email can not be blank');
        }else if(validateEmail(email) != true){
          alert('Please input a valid email address');
        }else{

          $.post("/admin/invite", {"email": email}, function(res){
            switch(res.status){
              case "ok":
              location.reload();
              break;

              default:
              alert(res.msg);
              break;
            }
          });
          
        }
      break;

      case "resend":
        $.post("/admin/invite", {"email": email, "cmd": 'resend'}, function(res){
          switch(res.status){
            case "ok":
              alert('invitation resent!');
            break;
          }
        })
      break;

      case "cancel":
        $.post("/admin/invite", {"email": email, "cmd": 'cancel'}, function(res){
          //alert('deleted')
          location.reload();
        })
      break;
    }



  })

});



</script>
