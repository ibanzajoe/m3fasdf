<div class="dashhead">
  <div class="dashhead-titles">
    <h6 class="dashhead-subtitle">Dashboards</h6>
    <h2 class="dashhead-title">Earnings</h2>
  </div>
</div>
<hr class="m-t">
<h3>
<% if !@balance.nil? %>
You've earned <%= number_to_currency(@balance) %>!
<span class="pull-right"><a href="/admin/withdraw" class="btn btn-success-outline">Request Withdraw</a></span>
<% else %>
You haven't earned anything yet
<% end %>
</h3>
<!-- <p>There is a $100 minimum to withdraw</p> -->
<% if !@balance.nil? %>
<hr>
<h4 class="list-group-hehader">
Your Earnings
</h4>
<table class="table table-bordehred">
  <tbody>
    <thead class="thead-inverse">
      <tr>
        <th>Company</th>
        <th>Code</th>
        <th>Used</th>
        <th>Earned</th>
        <th>Created</th>
      </tr>
    </thead>
    <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.company[:company] %></td>
      <td><%= transaction.code[:code] %></td>
      <td><%= transaction[:num_used] %></td>
      <td><%= number_to_currency(transaction[:amount]) %></td>
      <td><%= transaction[:created_at].strftime("%m/%d/%y") %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">

  <%= will_paginate @transactions, renderer: BootstrapPagination::Sinatra, :previous_label => '&laquo;', :next_label => '&raquo;' %>
  
</div>
<% end %>