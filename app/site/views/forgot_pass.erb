
<div class="row">

  <div class="col-md-12">
    <p class="lead">Forgot Password?</p>
    <form role="form" method="POST" class="form-horizontal" action="/user/forgot_pass">

      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-8">
          <input type="text" name="email" id="email" class="form-control" value="<%= params[:email] %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <button type="submit" class="btn btn-primary"><i class="fa btn-xs fa-lock"></i> Forgot Password</button>
        </div>
      </div>
      
    </form>

  </div>



</div>
